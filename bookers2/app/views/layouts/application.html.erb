<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<body>
    
 

  <header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav class="nav navbar-nav navbar-left">
      <span>Bookers</span>
    </nav>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li>
            <%= link_to " Home", user_path(current_user), class:"glyphicon glyphicon-home home",class: "home" %>
          </li>

          <li>
            <%= link_to " Users", users_path, class:"glyphicon glyphicon-user users",class: "users" %>
          </li>

          <li>
            <%= link_to " Books", books_path, class:"glyphicon glyphicon-book books",class: "books" %>
          </li>

          <li>
            <%= link_to " logout", destroy_user_session_path, method: :delete, class:"glyphicon glyphicon-log-out logout",class: "logout" %>
          </li>

        <% else %>

          <li>
            <%= link_to " Home", root_path, class:"glyphicon glyphicon-home home",class: "home" %>
          </li>

          <li>
            <%= link_to " About", about_top_path, class:"glyphicon glyphicon-link about",class: "about" %>
          </li>

          <li>
            <%= link_to " sign up", new_user_registration_path, class:"glyphicon glyphicon-edit sign_up",class: "sign_up" %>
          </li>

          <li>
            <%= link_to " login", new_user_session_path, class:"glyphicon glyphicon-log-in sign_in",class: "sign_in" %>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
    <%= yield %>


  <footer>
  <div class="container">
    <div class="row">
      <div class="col-xs-3 col-xs-offset-9">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>

</body>

</html>


