<body>
    
	<h1>Books</h1>
	<table>
		<thead>
			<tr>
				<th class="title">Title</th>
				<th class="body">Body</th>
				<th colspan="3"></th>
			</tr>
		</thead>
		<tbody>
			<% @impressions.each do |impression| %>
			<tr>
				<td><%= impression.title %> </td>
				<td><%= impression.body %>  </td>
				<td><%= link_to 'Show', impression_path(impression.id), class: "show_#{impression.id}" %> </td>
				<td><%= link_to 'Edit', edit_impression_path(impression.id), class: "edit_#{impression.id}" %> </td>
				<td><%= link_to 'Destroy', impression_path(impression.id), class: "destroy_#{impression.id}", method: :delete %> </td>
			</tr>
			<% end %>
		</tbody>
	</table>
</body>

<h2>New book</h2>

<%= form_for(@impression) do |f| %>
  <label for="impression_title">Title</label>
  <div>
<%= f.text_field :title, class: "book_title" %>
</div>
  <label for="book_body">Body</label>
  <div>
  <%= f.text_area :body, class: "book_body" %>
</div>
  <div>
  	<%= f.submit 'Create Book' %>
  </div>

<% end %>

